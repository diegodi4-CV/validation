{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "strict": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "outDir": "lib",
    "declaration": true,
    "declarationMap": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "lib"]
}
